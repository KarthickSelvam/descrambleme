extends ../layout

block scripts
	link(rel='stylesheet', href='/stylesheets/descramblestyle.css')
	script(type='text/javascript', src='/socket.io/socket.io.js')
	script(src="/js/countdown.js")
	script(src="/js/Scramble.js")	
block content
	a.log-out(href="/logout") 
		span
			img(src='/images/log-out.png')
	div.playerinfo
		input(type='hidden',id="username-hidden",value='#{user._id}')
		p.LevelInfo L#{user.level.number}
		a.UserPhoto
		p.LevelPoints #{user.points}
	#container
		#bubble	
	#userAnswer
	div.Sidebar
		div.playerselection
			div.head Definition:
			div.def#defni
	
		div.playerselection
			div.head Hints:
				#hint					
					#imageHint.iHint View hint image
					#imageSpan.hide
					#audioHint.aHint Hear the word
					#audioSpan.hide
block endScripts
	script(type='text/javascript')
		var originalWord="#{keyWord}";
	script(type="text/javascript",src="/js/gameplay.js")		