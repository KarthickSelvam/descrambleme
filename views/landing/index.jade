extends ../layout
block content
  link(href='stylesheets/video-js.css', rel='stylesheet')
  script(src='/js/video.js')
  script(src="js/intro.js")
  body
    #intro.intro
      video#example_video_1.video-js.vjs-default-skin.vjs-big-play-centered(controls='controls', preload='auto', width='640', height='264', poster='/images/minions.jpg', data-setup='{"example_option":true}')
        source(src='/assets/MinionsBanana.mp4', type='video/mp4')
          source(src='/assets/MinionsBanana.ogg', type='video/ogg')
            | Your browser does not support the video tag.
      div.loginSelect
          a.signin(href="javascript:SignIn();") SignIn 
          \
          a.signup(href="javascript:SignUp();") SignUp
      div.SignUpForm.hide
          form#SignUpForm(name='introForm', method='post', action='/signup')
            | User Name :
            input#username(type='text', name='username')
            | Email Address :
            input#emailAddress(type='text', name='email')
            a.click(href='javascript:document.getElementById(\'SignUpForm\').submit();') click here
      div.SignInForm.hide    
          form#SignInForm(name='introForm', method='post', action='/login')
            | User Name :
            input#username(type='text', name='username')
            a.click(href='javascript:document.getElementById(\'SignInForm\').submit();') click here
      div.errors-wrap
          span #{errors.username_error}
          span #{errors.email_error}
      
      audio#bgmusic(autoplay='autoplay',loop="loop")
        source(src="/assets/intromusic.mp3")

    a.audioTog(href="javascript:audioToggle();") Toggle